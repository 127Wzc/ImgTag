# PostgreSQL 连接字符串（必须配置）
PG_CONNECTION_STRING=postgresql://user:password@localhost:5432/imgtag

# 服务地址（可选，默认 http://localhost:8000）
# BASE_URL=http://localhost:8000

# 上传目录（可选，默认 ./uploads）
# UPLOAD_DIR=/path/to/uploads

# 日志级别（可选，默认 INFO，可选值: DEBUG, INFO, WARNING, ERROR）
# LOG_LEVEL=INFO

# 跳过数据库结构检查（可选，设为 true 跳过启动时的数据库检查）
# DB_SKIP_CHECK=true

# 管理员账号（可选，首次启动时创建，默认 admin / admin123）
# ADMIN_USERNAME=admin
# ADMIN_PASSWORD=admin123
